import matplotlib.pyplot as plt

#x-coordinates for left sides of bars
left = [1,2,3,4,5]

#height of bars
height = [10,24,36,40,5]

#Tick labels for bars
tick_label = ["food", "tuition", "rent","starbucks","savings"]

plt.bar(left, height, tick_label = tick_label, width = 0.6, 
color = ['red','green','purple', 'yellow', 'orange'])

plt.xlabel("stevens monthly purchases")
plt.ylabel("Dollars (in thousands)")

plt.title("monthly budget")
plt.show()